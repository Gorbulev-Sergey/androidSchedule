<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidSchedule" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/secondaryColor</item>
        <item name="colorPrimary">@color/secondaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="background">@color/secondaryColor</item>
        <item name="colorOnBackground">@color/secondaryTextColor</item>
        <item name="colorSurface">@color/secondaryDarkColor</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>

        <item name="colorAccent">@color/danger</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondaryColor</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>